{
  "name": "rxlax",
  "version": "1.1.0",
  "description": "Make Rx.js to relax a bit",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:lint": "tslint -c tslint.json src/**/*.ts",
    "test:unit": "mocha -r ts-node/register src/**/*.spec.ts",
    "test:coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive **/*.spec.ts",
    "test": "npm run test:ts && npm run test:lint && npm run test:coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "types": "rimraf types && tsc --emitDeclarationOnly --declaration --declarationDir types",
    "build": "rimraf dist && tsc",
    "prepublishOnly": "npm run test && npm run types && npm run build"
  },
  "keywords": [
    "rx",
    "rxjs",
    "stream",
    "backpressure"
  ],
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/lodash": "^4.14.145",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "coveralls": "^3.0.7",
    "husky": "^3.0.9",
    "lodash": "^4.17.15",
    "mocha": "^10.2.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "rxjs": "^6.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/rxlax.git"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
